<%- include("./partials/header.ejs"); %>

<main>
    <h1>This is the admin dashboard. Use this form to add products in the database:</h1>
    <form action="/api/products" method="post" enctype="multipart/form-data">
        <input type="text" name="productName" placeholder="Product Name" required >
        <input type="text" name="productDescription" placeholder="Product Description" required >
        <input type="number" name="productPrice" placeholder="Product Price" required >
        <input type="text" name="productCategory" placeholder="Product Category" required>
        <input type="number" name="productStock" placeholder="Product Stock" required >
        <label for="thumbnail">Thumbnail (Single Image)</label>
        <input type="file" name="thumbnail" placeholder="thumbnail" accept="image/*" required>
        <label for="images">Product Images (Multiple Images)</label>
        <input type="file" name="images" placeholder="images" accept="image/*" multiple required >
        <button type="submit">Add product</button>
    </form>
</main>


<%- include("./partials/footer.ejs"); %>