<%- include("../partials/header"); %> <!-- Include the shared header and navbar -->

<main> <!-- Makes POST request to /api/login route -->
    <div class="page-title-wrapper">
        <h1>
            <span>Customer Login</span>
        </h1>
    </div>

    <div class="login-container auth-container">
        <div class="block-title"><strong>Log into account</strong></div>
        <div class="block-note">If you already have an account, sign in using your email address.</div>
        <form action="/auth/login" method="post" id="loginForm">

            <fieldset class="form-fieldset">
                <div class="input-control">
                    <label for="email" class="form-label">Email</label>
                    <input
                    id="email"
                    type="email"
                    name="email"
                    class="form-input"
                    />
                    <div class="error"></div>
                </div>
            
                <%- include ("../partials/password-field", {
                    id: "password",
                    name: "password",
                    label: "Password",
                    required: true
                }) %>
            </fieldset>

            <div class="form-actions">
                <a href="/auth/forgot-password" class="forgot-password">Forgot password?</a>
                <button type="submit" class="submit-button btn-primary">LOGIN</button>
                <a href="/auth/register" class="register-button btn-primary">REGISTER</a>
            </div>
        </form>

        <% if (unconfirmedEmail) { %>
            <div class="resend-confirmation">
                Didn't receive a confirmation email? 
                <form action="/auth/resend-confirmation" method="POST">
                    <input type="hidden" name="email" value="<%= unconfirmedEmail %>">
                    <button type="submit" class="btn-secondary">Resend</button>
                </form>
            </div>
        <% } %>
        
        <div class="demo-banner">
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                </svg>
                Demo accounts:
            </p>
            <ul>
                <li><strong>Admin</strong>: admin@demo.com / AdminDemo123</li>
                <li><strong>User</strong>: user@demo.com / UserDemo123</li>
            </ul>
        </div>
    </div>
    
      
</main>


<%- include("../partials/footer"); %> <!-- Include the shared footer -->