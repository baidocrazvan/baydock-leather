<%- include("../partials/header"); %> <!-- Include the shared header and navbar -->
<main>
    <form method="POST" action="/address/shipping-address/edit/<%= addressId %>?_method=PUT" id="addressForm">
        <div class="input-control">
            <label for="firstName">First name:</label>
            <input
            id="firstName"
            type="text"
            name="firstName"
            class="form-input"
            value="<%= address.first_name %>"
            >
            <div class="error"></div>
        </div>
        
        <div class="input-control">
            <label for="lastName">Last name:</label>
            <input
            id="lastName" 
            type="text"
            name="lastName"
            class="form-input"
            value="<%= address.last_name %>"
            >
            <div class="error"></div>
        </div>
        
        <div class="input-control">
            <label for="address">Address</label>
            <input id="address" type="text" name="address" class="form-input" value="<%= address.address %>">
            <div class="error"></div>
        </div>

    
        <div class="input-control">
            <label for="city">City</label>
            <input id="city" type="text" name="city" class="form-input" value="<%= address.city %>">
            <div class="error"></div>
        </div>
        
        <div class="input-control">
            <label for="county">County</label>
            <input id="county" type="text" name="county" class="form-input" value="<%= address.county %>">
            <div class="error"></div>
        </div>
        
    
        <div class="input-control">
            <label for="phoneNumber">Phone:</label>
            <input
            id="phoneNumber" 
            type="text"  
            name="phoneNumber" 
            class="form-input"
            value="<%= address.phone_number %>"
            >
            <div class="error"></div>
        </div>
        
    
        <div class="input-control">
            <label for="postalCode">Postal code:</label>
            <input
            id="postalCode"
            type="text"
            name="postalCode"
            class="form-input"
            value="<%= address.postal_code %>"
            >
            <div class="error"></div>
        </div>

    <% if (address.is_billing === false) { %>
    <label>
        <input type="checkbox" name="is_billing" 
               <%= address.is_billing ? 'checked' : '' %>>
        Use as default billing address
    </label>
    <% } %>

    <% if (address.is_shipping === false) { %> 
    <label>
        <input type="checkbox" name="is_shipping" 
               <%= address.is_shipping ? 'checked' : '' %>>
        Use as default shipping address
      </label>
    <% } %>
    <button type="submit">Update Address</button>
</form>
</main>
<%- include("../partials/footer"); %> <!-- Include the shared footer -->