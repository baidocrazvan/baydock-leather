<%- include("../partials/header"); %>

<main class="address-form-container">
  <div class="form-wrapper">
    <h1 class="form-title">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
      </svg>
      Edit Address
    </h1>
    <p class="form-subtitle">Update your address details below</p>

    <form method="POST" action="/address/shipping-address/edit/<%= addressId %>?_method=PUT" id="addressForm" class="address-form">
      <div class="form-grid">
        <div class="input-control">
          <label for="firstName">First name</label>
          <input
            id="firstName"
            type="text"
            name="firstName"
            class="form-input"
            value="<%= address.first_name %>"
            required
          >
          <div class="error"></div>
        </div>
        
        <div class="input-control">
          <label for="lastName">Last name</label>
          <input
            id="lastName" 
            type="text"
            name="lastName"
            class="form-input"
            value="<%= address.last_name %>"
            required
          >
          <div class="error"></div>
        </div>
        
        <div class="input-control full-width">
          <label for="address">Street Address</label>
          <input 
            id="address" 
            type="text" 
            name="address" 
            class="form-input" 
            value="<%= address.address %>"
            required
          >
          <div class="error"></div>
        </div>

        <div class="input-control">
          <label for="city">City</label>
          <input 
            id="city" 
            type="text" 
            name="city" 
            class="form-input" 
            value="<%= address.city %>"
            required
          >
          <div class="error"></div>
        </div>
        
        <div class="input-control">
          <label for="county">County/State</label>
          <input 
            id="county" 
            type="text" 
            name="county" 
            class="form-input" 
            value="<%= address.county %>"
            required
          >
          <div class="error"></div>
        </div>
        
        <div class="input-control">
          <label for="postalCode">Postal Code</label>
          <input
            id="postalCode"
            type="text"
            name="postalCode"
            class="form-input"
            value="<%= address.postal_code %>"
            required
          >
          <div class="error"></div>
        </div>
        
        <div class="input-control">
          <label for="phoneNumber">Phone Number</label>
          <input
            id="phoneNumber" 
            type="tel"  
            name="phoneNumber" 
            class="form-input"
            value="<%= address.phone_number %>"
            required
          >
          <div class="error"></div>
        </div>

        <div class="input-control full-width checkbox-group">
          <!-- Hidden inputs to preserve current default status -->
          <input type="hidden" name="current_is_billing" value="<%= address.is_billing %>">
          <input type="hidden" name="current_is_shipping" value="<%= address.is_shipping %>">
          
          <% if (!address.is_billing) { %>
            <label class="checkbox-label">
              <input type="checkbox" name="is_billing" class="checkbox-input">
              <span class="checkbox-custom"></span>
              Use as default billing address
            </label>
          <% } else { %>
            <p class="default-note">This is your default billing address</p>
          <% } %>
          
          <% if (!address.is_shipping) { %>
            <label class="checkbox-label">
              <input type="checkbox" name="is_shipping" class="checkbox-input">
              <span class="checkbox-custom"></span>
              Use as default shipping address
            </label>
          <% } else { %>
            <p class="default-note">This is your default shipping address</p>
          <% } %>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="submit-btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
          </svg>
          Save Changes
        </button>
        <a href="/user/addresses" class="cancel-btn">Cancel</a>
      </div>
    </form>
  </div>
</main>

<%- include("../partials/footer"); %>