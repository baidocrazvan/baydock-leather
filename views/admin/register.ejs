<%- include("../partials/admin-header.ejs"); %>

<main class="admin-main"> 
    <div class="page-title-wrapper">
        <h1 class="page-title">
            <span>Create new admin account</span>
        </h1>
    </div>

   <div class="register-container auth-container">
        <form action="/admin/create" method="post" id="registerForm">
            <div class="account-fieldset">
                <div class="block-title"><strong>Account information</strong></div>
                <fieldset class="form-fieldset">
                    <div class="input-control">
                        <label for="email" class="form-label">Email:</label>
                        <input
                        id="email"
                        type="email"
                        name="email"
                        class="form-input"
                        />
                        <div class="error"></div>
                    </div>

                    <div class="input-control">
                        <label for="password" class="form-label">Password</label>
                        <input
                        id="password"
                        type="password"
                        name="password"
                        class="form-label"
                        />
                        <div class="error"></div>
                    </div>

                    <div class="input-control">
                        <label for="password" class="form-label">Confirm Password</label>
                        <input
                        id="cpassword"
                        type="password"
                        name="cpassword"
                        class="form-label"
                        />
                        <div class="error"></div>
                    </div>
                </fieldset>
            </div>

            <div class="personal-fieldset">
                <div class="block-title"><strong>Personal information</strong></div>
                <fieldset class="form-fieldset">
                    <div class="input-control">
                        <label for="firstName" class="form-label">First name:</label>
                        <input
                        id="firstName"
                        type="text"
                        name="firstName"
                        class="form-input"
                        />
                        <div class="error"></div>
                    </div>

                    <div class="input-control">
                        <label for="lastName" class="form-label">Last name:</label>
                        <input
                        id="lastName" 
                        type="text"
                        name="lastName"
                        class="form-input"
                        />
                        <div class="error"></div>
                    </div>

                </fieldset>
            </div>
        
        
        
            <div class="form-actions">
                <button type="submit" class="submit-button">Register</button>
            </div>
        
    
        </form>
    </div>

</main>


<%- include("../partials/admin-footer.ejs"); %>