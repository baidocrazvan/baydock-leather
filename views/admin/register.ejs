<%- include("../partials/admin-header.ejs"); %>

<main class="admin-main">
  <div class="page-title-wrapper">
    <h1>
      <span>Create new admin account</span>
    </h1>
  </div>

  <div class="register-container auth-container">
    <form action="/admin/create" method="post" id="registerForm">
      <div class="account-fieldset">
        <div class="block-title"><strong>Account information</strong></div>
        <fieldset class="form-fieldset">
          <div class="input-control">
            <label for="email" class="form-label">Email:</label>
            <input id="email" type="email" name="email" class="form-input" />
            <div class="error"></div>
          </div>

          <%- include ("../partials/password-field", {
                    id: "password",
                    name: "password",
                    label: "Password",
                    required: true
                }) %>

          <%- include ("../partials/password-field", {
                    id: "cpassword",
                    name: "cpassword",
                    label: "Confirm Password",
                    required: true
                }) %>
        </fieldset>
      </div>

      <div class="personal-fieldset">
        <div class="block-title"><strong>Personal information</strong></div>
        <fieldset class="form-fieldset">
          <div class="input-control">
            <label for="firstName" class="form-label">First name:</label>
            <input
              id="firstName"
              type="text"
              name="firstName"
              class="form-input"
            />
            <div class="error"></div>
          </div>

          <div class="input-control">
            <label for="lastName" class="form-label">Last name:</label>
            <input
              id="lastName"
              type="text"
              name="lastName"
              class="form-input"
            />
            <div class="error"></div>
          </div>
        </fieldset>
      </div>

      <div class="form-actions">
        <button type="submit" class="submit-button btn-primary">
          Register
        </button>
      </div>
    </form>
  </div>
</main>

<%- include("../partials/admin-footer.ejs"); %>
